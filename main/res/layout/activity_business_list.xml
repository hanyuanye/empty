<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanyuany.myapplication.MainActivity">

    <Button
        android:id="@+id/addBusiness"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:text="@string/Add_Business_Button"
        app:layout_constraintBottom_toBottomOf="@+id/deleteBusiness"
        app:layout_constraintEnd_toStartOf="@+id/searchBusiness"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/businessListListView"
        android:layout_width="match_parent"
        android:layout_height="468dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBusiness" />

    <Button
        android:id="@+id/searchBusiness"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:text="@string/Search_Business_Button"
        app:layout_constraintBottom_toBottomOf="@+id/deleteBusiness"
        app:layout_constraintEnd_toStartOf="@+id/deleteBusiness"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addBusiness"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteBusiness"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:text="@string/Delete_Business_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/searchBusiness"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
